>pmnt-form
    -message
    >pmnt-avatar-item
        >pmnt-avatar
            #style = background-image: url({{avatar}})
            #aria-hidden = true
        >pmnt-content
            >pmnt-formbody
                >form
                    >div.info
                        >input
                            #type = text
                            #placeholder = {{nameUI}}
                            #autocomplete = nickname
                        >input
                            #type = email
                            #placeholder = {{emailUI}}
                            #autocomplete = email
                        >input
                            #type = url
                            #placeholder = {{websiteUI}}
                            #autocomplete = url
                    -contentWrapper
                    >button.submit
                        #type = submit
                        .{{submitUI}}
                    >button.cancel.{{cancelHidden = hidden}}
                        .{{cancelUI}}
